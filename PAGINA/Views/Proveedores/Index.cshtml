@model IEnumerable<PAGINA.Models.Proveedores>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Proveedores</h2>

<p>
    @Html.ActionLink(" Create New", "Create", null, new { @class = "btn btn-success", @style = "text-decoration: none;" })
    <i class="fas fa-plus-circle"></i>
</p>
<table id="ProTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo_electronico)
            </th>
            <th></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_proveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo_electronico)
            </td>
            <td>
                @Html.ActionLink(" Editar", "Edit", new { id = item.ID_proveedor },
    new { @class = "btn btn-primary btn-sm", @style = "margin-right:5px" })
                <i class="fas fa-edit"></i>

                @Html.ActionLink(" Detalles", "Details", new { id = item.ID_proveedor },
                    new { @class = "btn btn-info btn-sm", @style = "margin-right:5px" })
                <i class="fas fa-info-circle"></i>

                @Html.ActionLink(" Eliminar", "Delete", new { id = item.ID_proveedor },
                    new { @class = "btn btn-danger btn-sm" })
                <i class="fas fa-trash-alt"></i>
            </td>
        </tr>

    }

</table>
<script>
    $(document).ready(function () {
        $('#ProTable').DataTable();
    });
</script>