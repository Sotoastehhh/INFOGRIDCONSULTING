@model IEnumerable<PAGINA.Models.Categorias_Productos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categoria Productos</h2>

<p>
    @Html.ActionLink(" Create New", "Create", null, new { @class = "btn btn-success", @style = "text-decoration: none;" })
    <i class="fas fa-plus-circle"></i>
</p>
<table id="CatTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_categoria)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_categoria)
            </td>
            <td>


                @Html.ActionLink(" Editar", "Edit", new { id = item.ID_categoria },
    new { @class = "btn btn-primary btn-sm", @style = "margin-right:5px" })
                <i class="fas fa-edit"></i>

                @Html.ActionLink(" Detalles", "Details", new { id = item.ID_categoria },
                    new { @class = "btn btn-info btn-sm", @style = "margin-right:5px" })
                <i class="fas fa-info-circle"></i>

                @Html.ActionLink(" Eliminar", "Delete", new { id = item.ID_categoria },
                    new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
<script>
        $(document).ready(function () {
            $('#CatTable').DataTable();
    });
</script>
