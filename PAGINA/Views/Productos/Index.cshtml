@model IEnumerable<PAGINA.Models.Productos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(" Create New", "Create", null, new { @class = "btn btn-success", @style = "text-decoration: none;" })
    <i class="fas fa-plus-circle"></i>
</p>
<table id="Table23" class="table table-striped table-bordered">
    <thead lass="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_entrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_expiracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codigo_barras)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_entrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_expiracion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codigo_barras)
                </td>
                <td>


                    @Html.ActionLink(" Editar", "Edit", new { id = item.ID_producto },
        new { @class = "btn btn-primary btn-sm", @style = "margin-right:5px" })
                    <i class="fas fa-edit"></i>

                    @Html.ActionLink(" Detalles", "Details", new { id = item.ID_producto },
                        new { @class = "btn btn-info btn-sm", @style = "margin-right:5px" })
                    <i class="fas fa-info-circle"></i>

                    @Html.ActionLink(" Eliminar", "Delete", new { id = item.ID_producto },
                        new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>



</table>
<script>
    $(document).ready(function () {
        $('#Table23').DataTable();
    });
</script>
